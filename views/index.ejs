<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="card">
        <h1>🔗 Simple URL Shortener</h1>

        <form action="/" method="POST" class="url-form">
          <label for="url">🔍 Long URL</label>
          <input
            type="text"
            id="url"
            name="url"
            placeholder="https://example.com"
            required
          />

          <label for="shortcode">✂️ Custom Shortcode</label>
          <input
            type="text"
            id="shortcode"
            name="shortcode"
            placeholder="e.g., mylink123"
            required
          />

          <button type="submit">✨ Shorten URL</button>
        </form>

        <div class="results">
          <h2>📄 Shortened URLs</h2>
          <ul>
            <% allLinks.forEach((link) => { %>
            <li>
              <a href="/<%= link.shortcode %>" target="_blank">
                <%= host %>/<%= link.shortcode %>
              </a>
              <span>→ <%= link.url %></span>
            </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
